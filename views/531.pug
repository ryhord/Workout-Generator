extends layout

block content
  h1 Enter a one rep max for each lift to get started
  br
  br
  form(method="POST" action="/workingmax")
    div(class="form-group")
      h2 Overhead Press
      input(
        type='text'
        name='pressMax'
        class='form-control'
      )
      h2 Deadlift
      input(
        type='text'
        name='deadMax'
        class='form-control'
      )
      h2 Bench Press
      input(
        type='text'
        name='benchMax'
        class='form-control'
      )
      h2 Squat
      input(
        type='text'
        name='squatMax'
        class='form-control'
      )
      br
      input(type="submit" value="Calculate" class="btn btn-outline-light" id="calcButton")