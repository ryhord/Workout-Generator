extends layout

block content
  h1 Your Working Maxes
    each val, index in workingMaxes
      h2= index + ': ' + val
    br
    br
    form(method="POST" action="/workingmax/results" id="workingmaxForm")     
      div(class="form-group" id="workingmaxSelect")
        label Enter the number of months you want results for
        select(name="months" class="form-control col-sm-2" id="monthSelector")
          option(value=1 selected="selected") 1
          option(value=2) 2
          option(value=3) 3
          option(value=4) 4
          option(value=5) 5
          option(value=6) 6
          option(value=7) 7
          option(value=8) 8
          option(value=9) 9
          option(value=10) 10
          option(value=11) 11
          option(value=12) 12
          option(value=13) 13
          option(value=14) 14
          option(value=15) 15
          option(value=16) 16
          option(value=17) 17
          option(value=18) 18
      button(type="submit" class="btn btn-outline-light" id="getResultsButton") Get Results